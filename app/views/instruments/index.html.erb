<div class="container">

  <h3>Browse Instruments</h3>

  <div class="nav-buttons">
  <%= link_to "View all", instruments_path, class: 'index-button' %>
  <% Instrument.categories.keys.each do |category| %>
    <%= link_to category.capitalize, instruments_path(query: category), class: 'index-button' %>
  <% end %>
  </div>
 <br />



  <div class="cards-grid">
    <% @instruments.each do |instrument| %>
      <div class="index-card-infos">
        <h4><%= link_to "#{instrument.name.capitalize}", instrument_path(instrument) %></h4>
        <h5>City</h5>
        <p><%= instrument.city %></p>
        <br>
        <h5>Price</h5> 
        <p><%= instrument.price %></p>
         <div class="search-img">
          <%= cl_image_tag instrument.photo, brightness: 30, radius: 20, width: 110, height: 110, crop: :thumb %>
        </div>
      </div>
    <% end %>
  </div>
  </div>